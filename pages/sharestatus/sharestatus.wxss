.share_content{
    margin-left: 30rpx;
    margin-right: 30rpx;
    border-bottom: 2rpx solid #e5e5e5;
    height: 200rpx;
}
.share_content textarea{
    width: 100%;
    height: 170rpx;
    font-size: 32rpx;
    color: #1d1d1d;
    margin-top: 30rpx;
}

.share_pic{
    margin-top: 20rpx;
    margin-left: 45rpx;
    margin-right: 30rpx;
    display: flex;
    flex-wrap: wrap;
}

.pic{
    -webkit-transform:translate(0,0);
    -moz-transform: translate(0,0);
    -ms-transform: translate(0,0);
    -o-transform: translate(0,0);
    transform: translate(0,0);
}
image{
    width: 210rpx;
    height: 210rpx;
    margin-right: 15rpx;
    margin-bottom: 20rpx;
}

video{
    width: 210rpx;
    height: 210rpx;
    margin-right: 15rpx;
    margin-bottom: 20rpx;
}

#delect{
    position: fixed;
    top: 0;
    right: 0;
    width: 40rpx;
    height: 40rpx;
    z-index: 100000;
}

.btn_send{
    position: fixed;
    bottom: 0rpx;
    height: 100rpx;
    line-height: 100rpx;
    width: 100%;
    background-color: #ff85b0;
    color: #fff;
    text-align: center;
    font-size: 36rpx;
}

.inStyle{
    font-size: 32rpx;
    color: #8e8e8e;
}

.line{
    width: 100%;
    height: 2rpx;
    background-color: #f0eff5;
}