page{
    background-color:#fff9fb;
}
.basic{
    background-color: #fff;
    height: 188rpx;
    border-top: 2rpx solid #e5e5e5;
    margin-bottom: 20rpx;
    display: flex;
}

.avatar_pic{
    width: 140rpx;
    height: 100%;
    margin-left: 30rpx;
    margin-right: 50rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

#avatar{
    width: 140rpx;
    height: 140rpx;
}

.NoP{
    width: 100%;
}

.name{
    border-bottom: 2rpx solid #e5e5e5;
}
.name, .phone{
    display: flex;
    height: 94rpx;
    align-items: center;
    justify-content: space-between;
    padding-right: 30rpx;
}
.name>input, .phone>input{
    text-align: right;
}

.integrant{
    color: red;
    font-size: 28rpx;
}

.check_code{
    background-color: #fff;
    display: flex;
    height: 94rpx;
    margin-bottom: 20rpx;
    padding-left: 30rpx;
    align-items: center;
    justify-content: space-between;
}

.check_button{
    height: 94rpx;
    width: 200rpx;
    background-color:#ff85b0;   /*#c7c7c7;*/
    line-height: 94rpx;
    color: #fff;
    text-align: center;
}

.click_check_button{
    height: 94rpx;
    width: 200rpx;
    background-color: #c7c7c7;
    line-height: 94rpx;
    color: #fff;
    text-align: center;
}

.word_1{
    font-size: 28rpx;
    color: #fff;
}

#code{
    margin-left: 15rpx;
}

.about_job{
        background-color: #fff;
}

.job,.company{
    height: 94rpx;
    margin-left: 30rpx;
    padding-right: 30rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 2rpx solid #e5e5e5;
}
#job,#company{
    text-align: right;
    font-size: 28rpx;
    color: #1d1d1d;
}

#company_ads{
    text-align: right;
    font-size: 28rpx;
    color: #1d1d1d;
    /* width: 70%; */
}

.work_time,.company_ads{
    background-color: #fff;
    height: 94rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 20rpx;
}

